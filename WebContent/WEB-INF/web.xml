<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>JEEProjectEPAM</display-name>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
    <welcome-file>register.jsp</welcome-file>
    <welcome-file>mainPage.jsp</welcome-file>
    <welcome-file>addTasks.jsp</welcome-file>
    <welcome-file>Today.jsp</welcome-file>
    <welcome-file>Someday.jsp</welcome-file>
    <welcome-file>Tomorrow.jsp</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>register</servlet-name>
    <servlet-class>by.gsu.epamlab.controller.RegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>register</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>by.gsu.epamlab.controller.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/Login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>logOut</servlet-name>
    <servlet-class>by.gsu.epamlab.controller.LogOutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>logOut</servlet-name>
    <url-pattern>/logOut</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>tasksServlet</servlet-name>
    <servlet-class>by.gsu.epamlab.controller.TasksServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>tasksServlet</servlet-name>
    <url-pattern>/tasksServlet</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>by.gsu.epamlab.filter.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/LoginServlet/AadTasksServlet</url-pattern>
  </filter-mapping>
  <servlet>
  <servlet-name>AddTasksServlet</servlet-name>
  <servlet-class>by.gsu.epamlab.controller.AadTasksServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>AddTasksServlet</servlet-name>
  <url-pattern>/addTasks</url-pattern>
  </servlet-mapping>
</web-app>